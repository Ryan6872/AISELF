{
    "version": 2,
    "builds": [
        {
            "src": "api/*.py",
            "use": "@vercel/python"
        },
        {
            "src": "index.html",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/explain",
            "dest": "/api/explain.py"
        },
        {
            "src": "/api/text",
            "dest": "/api/text.py"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}